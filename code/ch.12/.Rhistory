library(ggplot2)
d <- read.csv(file='D:/006966_wonderful2/02. 원고개발/실습/code/ch.8/input/data-salary-2.txt')
d$KID <- as.factor(d$KID)
res_lm <- lm(Y ~ X, data=d)
coef <- as.numeric(res_lm$coefficients)
p <- ggplot(d, aes(X, Y, shape=KID))
p <- p + theme_bw(base_size=18)
p <- p + geom_abline(intercept=coef[1], slope=coef[2], size=2, alpha=0.3)
p <- p + geom_point(size=2)
p <- p + scale_shape_manual(values=c(16, 2, 4, 9))
p <- p + labs(x='X', y='Y')
ggsave(p, file='D:/006966_wonderful2/02. 원고개발/실습/code/ch.8/output/fig8-1-left.png', dpi=300, w=4, h=3)
p <- ggplot(d, aes(X, Y, shape=KID))
p <- p + theme_bw(base_size=20)
p <- p + geom_abline(intercept=coef[1], slope=coef[2], size=2, alpha=0.3)
p <- p + facet_wrap(~KID)
p <- p + geom_line(stat='smooth', method='lm', se=FALSE, size=1, color='black', linetype='31', alpha=0.8)
p <- p + geom_point(size=3)
p <- p + scale_shape_manual(values=c(16, 2, 4, 9))
p <- p + labs(x='X', y='Y')
ggsave(p, file='D:/006966_wonderful2/02. 원고개발/실습/code/ch.8/output/fig8-1-right.png', dpi=300, w=6, h=5)
